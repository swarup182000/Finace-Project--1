name: Node.js CI Pipeline

on:
  push:
    branches:
      - master
  pull_request:
    branches:
      - master

jobs:
  build:
    runs-on: ubuntu-latest

    steps:
      # Checkout repo
      - name: Checkout repository
        uses: actions/checkout@v3

      # Setup Node.js
      - name: Setup Node.js
        uses: actions/setup-node@v3
        with:
          node-version: '18'

      # Install dependencies (root folder me package.json)
      - name: Install dependencies
        run: npm install

      # Optional: build
      - name: Build project
        run: npm run build || echo "No build script defined"

      # Optional: tests
      - name: Run tests
        run: npm test || echo "No test script defined"


